{
  "compilerOptions": {
    /* ===== Core settings ===== */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    /* ===== TypeScript behavior ===== */
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    /* ===== Paths / aliases ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ===== Tell TS where to find custom type declarations (IMPORTANT) ===== */
    "typeRoots": ["./types", "./node_modules/@types"],

    /* ===== Next.js compiler plugin ===== */
    "plugins": [
      { "name": "next" }
    ]
  },

  /* ===== Files to include in project ===== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"   // <- ensures next-auth types are included
  ],

  /* ===== Exclusions ===== */
  "exclude": ["node_modules"]
}