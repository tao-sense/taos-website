{
  "compilerOptions": {
    /* ===== Core settings ===== */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    /* ===== TypeScript behavior ===== */
    "allowJs": true,              // allow .js files (like your route.js)
    "checkJs": false,             // skip type-checking JavaScript
    "skipLibCheck": true,         // skip library .d.ts checks for speed
    "strict": true,               // keep strict mode for TypeScript files
    "noEmit": true,               // don't output JS during build
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    /* ===== Paths / aliases ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ===== Next.js plugin ===== */
    "plugins": [
      { "name": "next" }
    ]
  },

  /* ===== Files to include in project ===== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts"
  ],

  /* ===== Exclusions ===== */
  "exclude": [
    "node_modules"
  ]
}